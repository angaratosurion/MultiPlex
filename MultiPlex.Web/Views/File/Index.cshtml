@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<MultiPlex.Core.Data.Models.WikiFile>
@using MultiPlex.Core.Helpers.ASP.Net
    

@{
    ViewBag.Title = "File Index";
    
}

<h2>File Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
             
          
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wiki.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                 @if (item.isImage == true)
                 {
                   @Html.Image(item.RelativePath,item.FileName,"100")
                 }
                 @{
                     else
                     {
                         @Html.DisplayFor(modelItem => item.RelativePath);

                     }
                 }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wiki.Name)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "EditWiki", new { wikiname = item.Name }) |
                @Html.ActionLink("Details", "Details", new { wikiname = item.Name }) |
                @Html.ActionLink("Delete", "Delete", new { wikiname = item.Name })*@
            </td>
        </tr>
    }

</table>
