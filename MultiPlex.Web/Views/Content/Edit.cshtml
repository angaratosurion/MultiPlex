@model MultiPlex.Core.Data.ViewModels.EditContent

@*@section head {

    <title>Edit Wiki</title>

}*@



    <h2>Edit</h2>
    @using (Html.BeginRouteForm("Act", new { action = "EditContent", Model.Title.Slug }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <label for="Name">Title:</label>
            @Html.DisplayForModel("Name", Model.Title.Name)
            <label for="Source">Source:</label>
            <br />
            <br/>
            @Html.TextArea("Source")
            <label></label>
            <input type="submit" value="Save" />
            @if (@Model.Title.Id > 0) { 
            <input type="button" value="Cancel" onclick="window.location.href='@Url.RouteUrl("Default")'" />
             } 
        </fieldset>
     } 



